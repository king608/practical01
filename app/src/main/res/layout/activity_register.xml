<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/L_layout1"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/back" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:text="注册界面"
            android:padding="5dp"
            android:textSize="30sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_rgsName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/person"
        android:drawablePadding="16dp"
        android:layout_below="@+id/L_layout1"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:maxLength="20"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:padding="16dp" />

    <EditText
        android:id="@+id/et_rgsPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_lock"
        android:layout_below="@+id/et_rgsName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:drawablePadding="16dp"
        android:maxLength="20"
        android:hint="密码"
        android:inputType="textPersonName"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/et_rgsPassword1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_lock"
        android:layout_below="@+id/et_rgsPassword"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:drawablePadding="16dp"
        android:maxLength="20"
        android:hint="确认密码"
        android:inputType="textPersonName"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btn_rgs"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"
        android:text="注册"
        android:layout_below="@+id/et_rgsPassword1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

</RelativeLayout>
